{
  "name": "pizzatime-bot",
  "version": "1.0.0",
  "main": "src/index.js",
  "scripts": {
    "start": "node ./src/index.js",
    "start:api": "node ./src/server.js",
    "dev": "nodemon ./src/index.js",
    "dev:api": "nodemon ./src/server.js",
    "test": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/ --passWithNoTests --no-cache --runInBand",
    "test:watch": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/ --passWithNoTests --watch --no-cache --runInBand",
    "test:coverage": "cross-env NODE_OPTIONS=--experimental-vm-modules jest tests/ --passWithNoTests --coverage --verbose --no-cache --runInBand",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix"
  },
  "type": "module",
  "author": "Dunaev Vlad",
  "license": "ISC",
  "description": "Telegram bot for pizza ordering with customization",
  "dependencies": {
    "dotenv": "^17.2.3",
    "express": "^5.1.0",
    "node-telegram-bot-api": "^0.66.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.36.0",
    "@jest/globals": "^30.2.0",
    "cross-env": "^10.1.0",
    "eslint": "^9.36.0",
    "globals": "^16.4.0",
    "jest": "^30.2.0",
    "nodemon": "^3.0.1"
  }
}