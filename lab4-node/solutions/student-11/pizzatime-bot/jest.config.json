{
  "testEnvironment": "node",
  "collectCoverageFrom": [
    "src/**/*.js",
    "!src/index.js",
    "!src/server.js"
  ],
  "coverageThreshold": {
    "global": {
      "branches": 80,
      "functions": 80,
      "lines": 80,
      "statements": 80
    }
  },
  "transform": {},
  "testMatch": [
    "**/tests/**/*.test.js"
  ],
  "setupFilesAfterEnv": ["<rootDir>/tests/setup.js"]
}